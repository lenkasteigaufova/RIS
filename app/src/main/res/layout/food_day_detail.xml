                                android:layout_marginTop="8dp"
                                android:textColor="@color/secondary_text"
                                style="@style/Base.TextAppearance.AppCompat.Body2"
                                android:text="Price"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

